{
  "name": "BrowseIt, for Knowit",
  "short_name": "BrowseIt",
  "version": "1.3.0",
  "manifest_version": 2,
  "offline_enabled": true,

  "description": "For the noobs and the veterans alike. Has all important links, your introductory todolist, and a map of meeting rooms.",
  "homepage_url": "https://knowit.no",

  "browser_action": {
    "default_title": "BrowseIt",
    "default_popup": "popup.html"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "MacCtrl+Shift+B"
      },
      "description": "Open BrowseIt"
    }
  },

  "icons": {
    "48" : "img/48.png",
    "128" : "img/128.png"
  },

  "content_security_policy": "script-src 'self'; object-src 'self'"
}
